{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "typeRoots": ["src/types", "node_modules/@types"]
  },
  "include": [
    "main",
    "main/**/*",
    "renderer/src",
    "renderer/src/**/*",
    "renderer/src/components",
    "renderer/src/types/",
    "db",
    "api",
    "src",
    "src/types"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "out"
  ],
  "overrides": [
    {
      "files": ["main/preload.ts"],
      "compilerOptions": {
        "module": "CommonJS"
      }
    }
  ]
}
